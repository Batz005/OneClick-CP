[
  {
    "prefix": "cpbitdef",
    "description": "Define bitset of size n",
    "category": "bitset",
    "body": [
      "#include <bitset>",
      "bitset<${1:n}> ${2:bs};"
    ]
  },
  {
    "prefix": "cpbitset",
    "description": "Set bits in bitset",
    "category": "bitset",
    "body": [
      "${1:bs}.set(${2:pos});"
    ]
  },
  {
    "prefix": "cpbitres",
    "description": "Reset bits in bitset",
    "category": "bitset",
    "body": [
      "${1:bs}.reset(${2:pos});"
    ]
  },
  {
    "prefix": "cpbittest",
    "description": "Test bit in bitset",
    "category": "bitset",
    "body": [
      "if (${1:bs}.test(${2:pos})) {",
      "    $0",
      "}"
    ]
  },
  {
    "prefix": "cpbitcount",
    "description": "Count number of 1s in bitset",
    "category": "bitset",
    "body": [
      "int ${1:ones} = ${2:bs}.count();"
    ]
  },
  {
    "prefix": "cpbitany",
    "description": "Check if any bit is set",
    "category": "bitset",
    "body": [
      "if (${1:bs}.any()) {",
      "    $0",
      "}"
    ]
  }
]