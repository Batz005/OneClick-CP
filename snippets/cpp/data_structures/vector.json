    "prefix": "cpvecinput",
    "description": "Input a vector of n integers",
    "category": "vector",
    "body": [
      "int ${1:n};",
      "cin >> ${1};",
      "vector<int> ${2:v}(${1});",
      "for (int ${3:i} = 0; ${3} < ${1}; ++${3}) cin >> ${2}[${3}];"
    ]
  },
