{
  "name": "oneclick-cp",
  "displayName": "OneClick CP",
  "description": "One-click DSA and CP Starter Kit",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "oneclickCP",
          "title": "OneClick CP",
          "icon": "resources/OneClick_CP_LOGO.svg"
        }
      ]
    },
    "views": {
      "oneclickCP": [
        {
          "id": "oneclick-cp.sidebar",
          "name": "OneClick-CP Dashboard"
        }
      ]
    },
    "commands": [
      {
        "command": "oneclick-cp.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "oneclick-cp.resetFiles",
        "title": "OneClick CP: Reset Files"
      }
    ],
    "keybindings":[
      {
        "command": "oneclick-cp.resetFiles",
        "key": "ctrl+alt+r",
        "when": "editorTextFocus"
      }
    ],
    "snippets": [
      { "language": "cpp", "path": "./snippets/cpp/cpp_basics.json" },
      { "language": "cpp", "path": "./snippets/cpp/cpp_ds.json" },
      { "language": "cpp", "path": "./snippets/cpp/cpp_algos.json" },
      { "language": "cpp", "path": "./snippets/cpp/cpp_adv_algos.json" },
      { "language": "java", "path": "./snippets/java/java.json"},
      { "language": "python", "path": "./snippets/python/py.json"},
      { "language": "js", "path": "./snippets/js/js.json"}
    ],
    "configuration": {
      "type": "object",
      "title": "OneClick CP",
      "properties": {
        "oneclick-cp.defaultTemplates": {
          "type": "object",
          "description": "Default content for CP starter files.",
          "default": {
            "main.cpp": "#include <bits/stdc++.h>\nusing namespace std;\n\nint main() {\n    return 0;\n}\n",
            "input.txt": "",
            "output.txt": ""
          }
        },
        "oneclick-cp.templates": {
          "Fast IO": {
            "main.cpp": "...",
            "input.txt": "...",
            "output.txt": "..."
          },
          "Debug Template": {
            
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
